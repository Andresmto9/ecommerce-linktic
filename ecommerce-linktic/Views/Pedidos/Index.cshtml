@{
    ViewData["Titulo"] = "Lista de pedidos";
}

<div class="row">
    <div class="accordion" id="acordionPedidos">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#pedidoActual" aria-expanded="true" aria-controls="collapseOne">
                    Pedido actual
                </button>
            </h2>
            <div id="pedidoActual" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#acordionPedidos">
                <div class="accordion-body" id="contPedidoActual">
                    <div class="container">
                        <div class="row d-flex justify-content-center" id="contDetallePedido">
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#historicoPedido" aria-expanded="false" aria-controls="collapseTwo">
                    Historico de pedidos
                </button>
            </h2>
            <div id="historicoPedido" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#acordionPedidos">
                <div class="accordion-body">
                    <div class="col-md-10 offset-md-2 m-auto">
                        <table id="tblPedidos">
                            <thead>
                                <tr class="text-center">
                                    <th class="text-center">ID</th>
                                    <th class="text-center">Total del pedido</th>
                                    <th class="text-center">Fecha creación</th>
                                    <th class="text-center">Estado</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="dataTblPedidos">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section ScriptsPedidos {
	<script src="~/js/pedidos.js" asp-append-version="true"></script>
}